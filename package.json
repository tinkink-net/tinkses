{
  "name": "tinkses",
  "version": "0.1.0",
  "description": "An open-source mail sending service, you can use it to send emails from your own server.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "tinkses": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/smtp-server.js",
      "types": "./dist/smtp-server.d.ts"
    },
    "./config": {
      "import": "./dist/config.js",
      "types": "./dist/config.d.ts"
    }
  },
  "scripts": {
    "clean": "tsc --build --clean",
    "prebuild": "npm run clean",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "email",
    "smtp",
    "ses",
    "dkim",
    "spf"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tinkink/tinkses.git"
  },
  "bugs": {
    "url": "https://github.com/tinkink/tinkses/issues"
  },
  "homepage": "https://github.com/tinkink/tinkses",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "dkim": "^0.8.0",
    "inquirer": "^12.6.0",
    "mailparser": "^3.6.5",
    "nodemailer": "^6.9.7",
    "smtp-server": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/smtp-server": "^3.5.10",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.3.2"
  }
}
